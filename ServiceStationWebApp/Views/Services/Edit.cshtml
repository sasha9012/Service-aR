@model ServiceStationWebApp.Models.Service

@{
    ViewData["Title"] = "Редактировать";
}

<div class="container">

    <div class="text-center">
        <h1 class="my-font display-4">Редактирование услуг</h1>
    </div>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ServiceID" />
                <input type="hidden" asp-for="ExtName" />
                <div class="form-group">
                    <label asp-for="ServiceName" class="control-label"></label>
                    <input asp-for="ServiceName" class="form-control" />
                    <span asp-validation-for="ServiceName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить данные" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <img src="~/common.png" class="img-fluid" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
