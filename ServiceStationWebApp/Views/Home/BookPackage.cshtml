@model ServiceStationWebApp.Models.Booking

@{
    ViewData["Title"] = "ЗабронироватьПакет";
}

<div class="container">

    <div class="text-center">
        <h1 class="my-font display-4">Забронировать пакет</h1>
    </div>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="BookPackage">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PackageID" class="control-label"></label>
                    <select asp-for="PackageID" class="form-control" asp-items="ViewBag.PackageID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CarModelID" class="control-label"></label>
                    <select asp-for="CarModelID" class="form-control" asp-items="ViewBag.CarModelID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ContactNo" class="control-label"></label>
                    <input asp-for="ContactNo" class="form-control" />
                    <span asp-validation-for="ContactNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookingDate" class="control-label"></label>
                    <input asp-for="BookingDate" class="form-control" />
                    <span asp-validation-for="BookingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Забронировать пакет" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <img src="~/common.png" class="img-fluid" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

